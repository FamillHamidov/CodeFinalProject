@model List<TourViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/User_Layout.cshtml";
}
<div>
	<h5 class="card-title">Turlar</h5>
	<a asp-controller="Tours" asp-action="Create" class="btn btn-primary mb-3">Yeni tur yarat</a>
	@if (Model.Any())
	{
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Resim</th>
					<th>Kurs isim</th>
					<th>Fiyat</th>
					<th>Süre</th>
					<th>Kategori</th>
					<th>İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td><img  src="@item.StockPictureUrl" /></td>
						<td>@item.Name</td>
						<td>@item.Price</td>
						<td>@item.Feature.Duration</td>
						<td>@item.Category.Name</td>
						<td>
							<a asp-controller="Tours" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>

							<a asp-controller="Tours" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<div class="alert alert-info">
			Tur tapilmadi
		</div>
	}
</div>


